<h2 class="mt-5 mb-5">Wellcome to Pizza Shop</h2>

<div class="row">
  <% @products.each do |p| %>
    <div class="col-md-3">
      <div class="">
        <%= p.title %>
      </div>
      <div>
        <img class="img-fluid img-thumbnail" src="<%= p.path_to_image %>" alt="pizza">
      </div>
      <div class="">
        <%= p.description %>
      </div>
      <div class="">
        Size: <%= p.size %>
      </div>
      <div class="">
        Price: <%= p.price %>
      </div>
      <div class="">
        <button type="button" class="btn btn-success" onclick="add_to_cart(<%= p.id %>)">Success</button>
      </div>
    </div>
  <% end %>
</div>

<button type="button" class="btn btn-primary btn-lg mt-3" onclick="something()">Click me</button>

<script type="text/javascript">
  $(function() {
    update_orders_input();
  });
</script>
